<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.huasheng.dao.PersonOpera">

   <select id="getPerson" resultType="com.huasheng.pojo.Person">
        SELECT * from person;
    </select>

    <select id="getByParam" parameterType="java.util.Map" resultType="com.huasheng.pojo.Person">
        SELECT * FROM person where uId=#{uId} and name=#{name};
    </select>

</mapper>